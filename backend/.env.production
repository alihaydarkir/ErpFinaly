# ============================================
# ERP SYSTEM - PRODUCTION ENVIRONMENT
# ============================================
# ⚠️  IMPORTANT: Replace all placeholder values before deployment!

# DATABASE (Production)
DATABASE_URL=postgresql://DB_USER:DB_PASSWORD@DB_HOST:5432/erp_db
DB_HOST=your_production_db_host
DB_PORT=5432
DB_USER=erp_production_user
DB_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
DB_NAME=erp_production_db

# REDIS (Production)
REDIS_URL=redis://your_production_redis_host:6379
REDIS_HOST=your_production_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# JWT (Production - MUST CHANGE!)
# Generate: openssl rand -base64 48
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# SERVER
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://helix-ware.com

# Rate Limiting (Strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OLLAMA AI (Production)
OLLAMA_BASE_URL=http://your_ollama_server:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=30000

# AI Settings
AI_MAX_CONTEXT=2000
RAG_TOP_K=5
RAG_THRESHOLD=0.7

# EMAIL (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@helix-ware.com
SMTP_PASSWORD=CHANGE_ME_APP_PASSWORD
SMTP_FROM=noreply@helix-ware.com

# LOGGING (Production)
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/erp

# SECURITY (Strict)
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://helix-ware.com
HELMET_ENABLED=true

# FEATURE FLAGS
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBSOCKET=true

# FILE UPLOAD
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/var/uploads/erp

# SESSION
# Generate: openssl rand -hex 32
SESSION_SECRET=CHANGE_ME_GENERATE_SECURE_SESSION_SECRET

# EXTERNAL SERVICES
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================
# SECURITY CHECKLIST BEFORE DEPLOYMENT
# ============================================
# [ ] Change all passwords and secrets
# [ ] Update FRONTEND_URL to production domain
# [ ] Configure production database
# [ ] Configure production Redis
# [ ] Set up SSL certificates
# [ ] Enable email notifications
# [ ] Configure error tracking (Sentry)
# [ ] Test backup/restore procedures
# [ ] Review CORS settings
# [ ] Enable rate limiting
# [ ] Configure firewall rules
