# ============================================
# ERP SYSTEM - DEVELOPMENT ENVIRONMENT
# ============================================

# DATABASE (Docker)
DATABASE_URL=postgresql://postgres:12345@erp_postgres:5432/erp_db
DB_HOST=erp_postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=12345
DB_NAME=erp_db

# REDIS (Docker)
REDIS_URL=redis://erp_redis:6379
REDIS_HOST=erp_redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT (Development - Not secure, for testing only!)
JWT_SECRET=dev_secret_key_not_for_production_use_only_32chars
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# SERVER
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5000

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# OLLAMA AI
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=30000

# AI Settings
AI_MAX_CONTEXT=2000
RAG_TOP_K=5
RAG_THRESHOLD=0.7

# EMAIL (Disabled in development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=dev@erp.local

# LOGGING
LOG_LEVEL=debug
LOG_FORMAT=simple
LOG_FILE_PATH=./logs

# SECURITY (Relaxed for development)
BCRYPT_ROUNDS=4
CORS_ORIGIN=http://localhost:5000
HELMET_ENABLED=true

# FEATURE FLAGS
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBSOCKET=true

# FILE UPLOAD
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# SESSION
SESSION_SECRET=dev_session_secret_not_for_production
