# ============================================
# ERP SYSTEM - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# For production: Use .env.production template
# For development: Use .env.development template

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://postgres:secure_password@localhost:5432/erp_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=secure_password_change_in_production
DB_NAME=erp_db

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# JWT AUTHENTICATION
# ============================================
# IMPORTANT: Generate a strong secret for production!
# Generate: openssl rand -base64 48
JWT_SECRET=your_super_secret_key_minimum_32_characters_change_in_production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# OLLAMA AI CONFIGURATION
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=30000

# AI Settings
AI_MAX_CONTEXT=2000
RAG_TOP_K=5
RAG_THRESHOLD=0.7

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@erp.local

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs

# ============================================
# SECURITY SETTINGS
# ============================================
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBSOCKET=true

# ============================================
# FILE UPLOAD SETTINGS
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ============================================
# SESSION SETTINGS
# ============================================
SESSION_SECRET=your_session_secret_change_in_production

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================
# Sentry for error tracking
SENTRY_DSN=

# Google Analytics
GA_TRACKING_ID=

# ============================================
# GENERATION COMMANDS
# ============================================
# Generate JWT Secret: openssl rand -base64 48
# Generate DB Password: openssl rand -base64 32
# Generate Session Secret: openssl rand -hex 32
